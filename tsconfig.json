{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "./dist"
  },
  "include": [
    "src/**/*.ts",
    "@types/**/*.d.ts"
  ],
  "exclude": [
    "tests",
    "dist",
    "node_modules"
  ]
}